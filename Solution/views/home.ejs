<%- include (`partials/header`) %>

    <div class="row">
        <div class="col-md-3 col-lg-2 d-none d-md-block">
            <div class="list-group rounded-0">
                <a href="/dashboard" class="list-group-item list-group-item-action <%= data.dashboardActive %>">Dashboard</a>
                <a href="/groups" class="list-group-item list-group-item-action <%= data.groupsActive %>">Groups</a>
                <a href="/family" class="list-group-item list-group-item-action <%= data.familyActive %>">Family</a>
                <a href="/friends" class="list-group-item list-group-item-action <%= data.friendsActive %>">Friends</a>
            </div>
        </div>
        <div class="col-sm-12 col-md-9 col-lg-10 pl-md-0">
            <div class="container-fluid">
                <div class="jumbotron mt-3">
                    <h1 class=" display-4">Welcome <%= currentUser.username %></h1>
                    <p class="lead">The one stop and the best for all your expense management</p>
                    <hr class="my-4">
                    <p>Create Groups, Add Family members and friends to split the expense
                    </p>
                    <a class="btn btn-primary btn-md" href="#" role="button">Add Expense</a>
                </div>
                <div class="card">
                    <div class="card-header">
                        <%= data.card.heading %>
                    </div>
                    <div class="card-body">
                        <p class="card-text"><%= data.card.text %></p>
                        <% if(data.card.btnText) { %>
                            <a href="#" class="btn btn-primary"><%= data.card.btnText %></a>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include (`partials/footer`) %>